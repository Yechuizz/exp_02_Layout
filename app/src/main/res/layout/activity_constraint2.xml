<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintActivity2">

    <TextView
        android:id="@+id/t1"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/t1" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="137dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/t1"
        app:layout_constraintTop_toTopOf="@id/t1"
        android:background="@drawable/t2" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="137dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/t2"
        app:layout_constraintTop_toTopOf="@id/t2"
        android:background="@drawable/t3" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/space_station"
        app:layout_constraintStart_toStartOf="@id/t1"
        app:layout_constraintTop_toTopOf="@id/t1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintStart_toStartOf="@id/t2"
        app:layout_constraintTop_toTopOf="@id/t2" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/rover_icon"
        app:layout_constraintStart_toStartOf="@id/t3"
        app:layout_constraintTop_toTopOf="@id/t3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Space Stations"
        app:layout_constraintBottom_toBottomOf="@id/t1"
        app:layout_constraintStart_toStartOf="@id/t1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="Flights"
        app:layout_constraintBottom_toBottomOf="@id/t2"
        app:layout_constraintStart_toStartOf="@id/t2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="Rovers"
        app:layout_constraintBottom_toBottomOf="@id/t3"
        app:layout_constraintStart_toStartOf="@id/t3" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:background="#067E20"
        android:gravity="center_vertical|center_horizontal"
        android:text="DCA"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/t4"
        app:layout_constraintTop_toTopOf="@id/t4" />

    <TextView
        android:id="@+id/t6"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginEnd="60dp"
        android:background="#067E20"
        android:gravity="center_vertical|center_horizontal"
        android:text="MARS"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/t4"
        app:layout_constraintTop_toTopOf="@id/t4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/double_arrows"
        app:layout_constraintBottom_toBottomOf="@+id/t4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="#067E20"
        android:gravity="center_horizontal|center_vertical"
        android:text="DEPART"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t4"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/galaxy" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/t4"
        app:srcCompat="@drawable/rocket_icon" />

    <TextView
        android:id="@+id/t7"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp"
        android:background="#DC4D20"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:text="One Way"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t4" />

    <TextView
        android:id="@+id/t8"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="#DC4D20"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:text="1 Traveller"
        app:layout_constraintStart_toStartOf="@+id/t7"
        app:layout_constraintTop_toBottomOf="@+id/t7" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="#C13D13"
        app:layout_constraintEnd_toEndOf="@+id/t7"
        app:layout_constraintTop_toTopOf="@+id/t7" />


</androidx.constraintlayout.widget.ConstraintLayout>